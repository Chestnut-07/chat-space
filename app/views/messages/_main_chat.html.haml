.Chat-main
  .group-info
    .group-info__header-left
      .group-info__group-name
        test
      .group-info__member-list
        Member : masa
    =link_to '#', class: "group-info__header-right" do
      Edit
  .message-list
    .message-box
      .message-info
        .message-info__name
          masa
        .message-info__date
          2019/11/20(wed) 17:43:01
      .message-main
        .message-main__text
          おはよう!
  .chat-footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: "form__input-content", placeholder: 'type a message'
        = f.label, class: "form__input-image" do
          =icon("fa","image")
          = f.field :image, class: 'Hidden'
      = f.submit 'Send', class: "form__submit"
      