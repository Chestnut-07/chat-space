.Side-bar
  .user-name
    .user-name__header-items
      .user-name__name
        = current_user.name
      .user-name__icons
        = link_to new_group_path, class: "user-name__edit"  do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "user-name__cog" do
          = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group), class: "group__messages" do
          .group__name
            =group.name
          .group__message
